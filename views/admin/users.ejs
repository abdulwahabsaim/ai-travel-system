<div class="container" style="padding: 40px 20px;">
    <div class="page-header">
        <h1>Manage Users (<%= users.length %>)</h1>
        <a href="/admin" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Admin Dashboard
        </a>
    </div>

    <div class="list-container">
        <table style="width: 100%; border-collapse: collapse;">
            <thead style="background: #f8fafc;">
                <tr>
                    <th style="padding: 15px; text-align: left;">Name</th>
                    <th style="padding: 15px; text-align: left;">Email</th>
                    <th style="padding: 15px; text-align: left;">Role</th>
                    <th style="padding: 15px; text-align: left;">Joined</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(u => { %>
                    <tr style="border-bottom: 1px solid #e2e8f0;">
                        <td style="padding: 15px;"><%= u.firstName %> <%= u.lastName %></td>
                        <td style="padding: 15px;"><%= u.email %></td>
                        <td style="padding: 15px;"><span class="status-badge <%= u.role === 'admin' ? 'status-confirmed' : 'status-pending' %>"><%= u.role %></span></td>
                        <td style="padding: 15px;"><%= new Date(u.createdAt).toLocaleDateString() %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>