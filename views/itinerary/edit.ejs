<div class="container">
    <div class="form-container">
        <h1 class="form-title">Edit Itinerary</h1>
        
        <form method="POST" action="/itinerary/<%= itinerary._id %>/edit" class="form">
            <div class="form-group">
                <label for="title">Itinerary Title</label>
                <input type="text" name="title" id="title" value="<%= itinerary.title %>" required placeholder="e.g., Paris Adventure 2024">
            </div>

            <div class="form-group">
                <label for="destination">Destination</label>
                <input type="text" name="destination" id="destination" value="<%= itinerary.destination %>" required placeholder="e.g., Paris, France">
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="startDate">Start Date</label>
                    <input type="date" name="startDate" id="startDate" value="<%= new Date(itinerary.startDate).toISOString().split('T')[0] %>" required>
                </div>
                <div class="form-group">
                    <label for="endDate">End Date</label>
                    <input type="date" name="endDate" id="endDate" value="<%= new Date(itinerary.endDate).toISOString().split('T')[0] %>" required>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="budget">Budget ($)</label>
                    <input type="number" name="budget" id="budget" step="0.01" value="<%= itinerary.budget %>" required placeholder="e.g., 2000">
                </div>
                <div class="form-group">
                    <label for="travelStyle">Travel Style</label>
                    <select name="travelStyle" id="travelStyle" required>
                        <option value="">Select travel style</option>
                        <option value="budget" <%= itinerary.travelStyle === 'budget' ? 'selected' : '' %>>Budget</option>
                        <option value="luxury" <%= itinerary.travelStyle === 'luxury' ? 'selected' : '' %>>Luxury</option>
                        <option value="adventure" <%= itinerary.travelStyle === 'adventure' ? 'selected' : '' %>>Adventure</option>
                        <option value="relaxation" <%= itinerary.travelStyle === 'relaxation' ? 'selected' : '' %>>Relaxation</option>
                        <option value="cultural" <%= itinerary.travelStyle === 'cultural' ? 'selected' : '' %>>Cultural</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="status">Status</label>
                <select name="status" id="status" required>
                    <option value="draft" <%= itinerary.status === 'draft' ? 'selected' : '' %>>Draft</option>
                    <option value="confirmed" <%= itinerary.status === 'confirmed' ? 'selected' : '' %>>Confirmed</option>
                    <option value="completed" <%= itinerary.status === 'completed' ? 'selected' : '' %>>Completed</option>
                    <option value="cancelled" <%= itinerary.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                </select>
            </div>

            <div class="form-group">
                <label for="notes">Notes</label>
                <textarea name="notes" id="notes" rows="4" placeholder="Any additional notes about this itinerary..."><%= itinerary.notes || '' %></textarea>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Update Itinerary
                </button>
                <a href="/itinerary/<%= itinerary._id %>" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div> 